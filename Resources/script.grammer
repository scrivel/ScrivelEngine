@start = script;

@reportsCommentTokens = NO;
@commentState       = '/';
@singleLineComments = '//';
@multiLineComments  = '/*' '*/';
@allowsFloatingPoint = YES;

script      =   element+;
element		=	Comment | words | methodChain;

words       =   name? '[' text ']';
name        =   Word;
text        =   (Word | QuotedString | Number)+;

methodChain =   method ('.' method)* ';'?;
method 		=	identifier ('(' arguments ')')?;
arguments	=	Empty | value (',' value )*;
value		= 	Number | QuotedString | array | object;
array		=	'[' value (',' value)* ']';
object		=	'{' keyValue (',' keyValue)* '}';
keyValue	= 	key ':' value;
key         =   Word | QuotedString;
identifier	=	Word;